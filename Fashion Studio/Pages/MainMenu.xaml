<Page x:Class="Fashion_Studio.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fashion_Studio.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid Background="#bcc7e7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/Images/logo.jpg"/>
        <Button Content="Модели" Click="ModelClick" Margin="5" Grid.Row="1" Height="30"/>
        <Button Content="Ткани" Click="ClothClick" Margin="5" Grid.Row="2" Height="30"/>
        <Button Content="Выход" Click="ExitClick" Margin="5" Grid.Row="7" Height="30"/>
        <Frame Name="MainMenuFrame" Grid.Column="1" Grid.RowSpan="8"/>
    </Grid>
</Page>