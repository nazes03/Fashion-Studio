<Page x:Class="Fashion_Studio.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fashion_Studio.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid Background="#bcc7e7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/Images/logo.jpg" Width="120" HorizontalAlignment="Center"/>
        <Label Content="Заказы" Grid.Column="1" Grid.Row="0" Height="30" HorizontalAlignment="Center"  VerticalAlignment="Top"/>
        <Button Content="Выход" Click="ExitClick" Grid.Column="0" Grid.Row="3" Height="30" VerticalAlignment="Bottom"  Margin="7"/> 
        <Frame Name="MainWindowFrame" Grid.Column="1"/>
        
    </Grid>
</Page>